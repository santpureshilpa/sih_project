<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DistributorHomePage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#80D8FF"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/scanid"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/qrcode"
                            android:tint="@color/colorBlack" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="0dp"
                            android:background="@color/colorWhite"
                            android:text="QR code"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/itemsid"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/myitems"
                            android:tint="@color/colorPrimary" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="0dp"
                            android:background="@color/colorWhite"
                            android:text="My Items"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            />
                            </LinearLayout>
                    <LinearLayout
                        android:id="@+id/passbookid"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_library_books_black_24dp"
                            android:tint="@color/colorPrimary" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="0dp"
                            android:background="@color/colorWhite"
                            android:text="Passbook"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                    <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="295dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/coloryellow"
                    >

                        <ImageView
                            android:layout_width="400dp"
                            android:layout_height="300dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/aashirvaad" />
                    </LinearLayout>
                </LinearLayout>




        <!-- Second Row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >
                    >
                </LinearLayout>
                <!-- End Second Row-->
        <!-- Third Row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >
                    <LinearLayout
                        android:id="@+id/profileid"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_perm_identity_black_24dp"
                            android:tint="@color/colorPrimary" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="0dp"
                            android:background="@color/colorWhite"
                            android:text="My Profile"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/homeid"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >

                        <ImageView
                            android:layout_width="69dp"
                            android:layout_height="58dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_home_black_24dp"
                            android:tint="@color/colorMintDark" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorWhite"
                            android:text="Home"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/govtaccid"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        >

                        <ImageView
                            android:layout_width="62dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_add_black_24dp"
                            android:tint="@color/colorBlueJeansDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorWhite"
                            android:padding="8dp"
                            android:text="Bank Account Details"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>
         <!-- End Third Row-->

            </LinearLayout>





</LinearLayout>
