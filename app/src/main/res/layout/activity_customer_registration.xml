<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.CustomerRegistration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<TextView
    android:id="@+id/textViewWelcome"
    android:layout_width="400dp"
    android:layout_height="37dp"
    android:layout_marginStart="60dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="600dp"
    android:background="@drawable/button_round"
    android:text="     New User Registration"
    android:textColor="@color/colorPrimary"
    android:textSize="20dp"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.502"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />



<View
    android:id="@+id/divider4"
    android:layout_width="395dp"
    android:layout_height="1dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintBottom_toTopOf="@+id/editTextName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textViewWelcome"
    app:layout_constraintVertical_chainStyle="spread_inside" />

<EditText
    android:id="@+id/editTextName"
    android:layout_width="400dp"
    android:layout_height="40dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="100dp"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="45dp"
    android:background="@drawable/edit_round"
    android:drawablePadding="30dp"
    android:ems="10"
    android:hint="Name"
    android:inputType="textPersonName"
    android:padding="10dp"
    android:textAlignment="center"
    android:textSize="16dp"
    app:layout_constraintBottom_toTopOf="@+id/editTextCity"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider4" />

<EditText
    android:id="@+id/editTextRationNo"
    android:layout_width="400dp"
    android:layout_height="40dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="140dp"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/edit_round"
    android:ems="10"

    android:hint="Ration Card No."
    android:inputType="number"
    android:padding="10dp"
    android:textAlignment="center"
    android:textSize="16dp"/>


<EditText
    android:id="@+id/editTextAdharNumb"
    android:layout_width="400dp"
    android:layout_height="40dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="180dp"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="38dp"
    android:background="@drawable/edit_round"
    android:ems="10"
    android:inputType="number"
    android:hint="Adhar Card No."

    android:padding="10dp"
    android:textAlignment="center"
    android:textSize="16dp"
    app:layout_constraintBottom_toTopOf="@+id/editTextRationNo"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editTextCity" />

<EditText
    android:id="@+id/editTextCity"
    android:layout_width="400dp"
    android:layout_height="40dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="260dp"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="53dp"
    android:background="@drawable/edit_round"
    android:ems="10"
    android:hint="City"
    android:inputType="textPersonName"
    android:padding="10dp"
    android:textAlignment="center"
    android:textSize="16dp"/>

<EditText
    android:id="@+id/editTextPhoneNo"
    android:layout_width="400dp"
    android:layout_height="40dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="220dp"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="53dp"
    android:background="@drawable/edit_round"
    android:ems="10"
    android:hint="Phone No  "
    android:padding="10dp"
    android:inputType="number"
    android:textAlignment="center"
    android:textSize="16dp"/>

<CheckBox
    android:id="@+id/checkBoxDeclaration"
    android:layout_width="4000dp"
    android:layout_height="40dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="350dp"
    android:layout_marginEnd="40dp"
    android:text="I hereby declare all the data provided is correct as per my knowledge."
    android:textSize="16dp"
    app:layout_constraintBottom_toTopOf="@+id/checkBoxAccept"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editTextRationNo" />

<CheckBox
    android:id="@+id/checkBoxAccept"
    android:layout_width="400dp"
    android:layout_height="40dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="400dp"
    android:layout_marginEnd="50dp"
    android:text="I accept all the Terms and Conditions."
    android:textSize="16dp"
    app:layout_constraintBottom_toTopOf="@+id/buttonProceed"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/checkBoxDeclaration" />

<Button
    android:id="@+id/buttonProceed"
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:layout_marginStart="100dp"
    android:layout_marginTop="450dp"
    android:layout_marginEnd="100dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/button_round"
    android:text="Proceed"
    android:textColor="@color/colorPrimary"
    android:textSize="16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/checkBoxAccept" />


<EditText
    android:id="@+id/editTextCreatePassword"
    android:layout_width="400dp"
    android:layout_height="40dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="300dp"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="53dp"
    android:background="@drawable/edit_round"
    android:ems="10"
    android:hint="Create Password"
    android:inputType="textPassword"
    android:textAlignment="center" />





    </RelativeLayout>


</ScrollView>
