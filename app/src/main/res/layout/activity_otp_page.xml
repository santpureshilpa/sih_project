<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OtpPage">

    <TextView
        android:id="@+id/textViewWelcomeOtpText"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="650dp"
        android:text="OTP Verification"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button_round"
        />

    <TextView
        android:id="@+id/textViewOtpText"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="574dp"
        android:text="   Please Enter The OTP received. "
        android:textColor="@color/colorPrimary"
        android:background="@drawable/edit_round"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeOtpText"
        app:layout_constraintVertical_bias="0.483" />

    <EditText
        android:id="@+id/editTextEnterOtp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:hint="4 digit OTP"
        android:inputType="number"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOtpText" />

    <Button
        android:id="@+id/buttonVerify"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="342dp"
        android:background="@drawable/button_round"
        android:text="Verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEnterOtp" />
</RelativeLayout>